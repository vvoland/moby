{
  "name": "moby",
  "build": {
    "context": "..",
    "dockerfile": "../Dockerfile",
    "target": "devcontainer"
  },
  "workspaceFolder": "/go/src/github.com/docker/docker",
  "workspaceMount": "source=${localWorkspaceFolder},target=/go/src/github.com/docker/docker,type=bind",

  "remoteUser": "root",

  "runArgs": ["--privileged"],

  "mounts": [
    "type=bind,source=/Users/pawel/c/moby/.git,target=/Users/pawel/c/moby/.git"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go"
      ]
    }
  }
}
